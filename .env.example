# Discord Security Bot Configuration - GuardianBot v1.0.0

# ============================================================================
# CORE BOT CONFIGURATION (Required)
# ============================================================================

# Bot Token (Required) - Get from Discord Developer Portal
DISCORD_TOKEN=replace-with-discord-bot-token

# Discord OAuth2 Credentials (Required for Dashboard)
DISCORD_CLIENT_ID=123456789012345678
DISCORD_CLIENT_SECRET=replace-with-discord-client-secret

# ============================================================================
# PRODUCTION MODE (v1.0.0+)
# ============================================================================

# Production Mode Toggle - Set to 'true' for production deployment
# When enabled:
#   - Hides test routes
#   - Disables verbose console logs
#   - Enables stricter rate limits
#   - Suppresses debug output
PRODUCTION_MODE=false

# Node Environment
NODE_ENV=development

# ============================================================================
# WEB DASHBOARD CONFIGURATION
# ============================================================================

# Dashboard Port
PORT=3000
WEB_PORT=3000

# Dashboard Host
WEB_HOST=localhost
DASHBOARD_ORIGIN=http://localhost:3000

# OAuth2 Redirect URI (Must match Discord Developer Portal)
# For production: https://yourdomain.com/auth/callback
DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback
REDIRECT_URI=http://localhost:3000/auth/callback

# Session Secret (IMPORTANT: Change this to a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=replace-with-strong-random-session-secret-minimum-32-characters
JWT_SECRET=replace-with-strong-jwt-secret

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Configuration
DB_NAME=security_bot.db
DB_PATH=./data/

# Database Backup Encryption Key (v1.0.0+)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
BACKUP_ENCRYPTION_KEY=replace-with-strong-backup-encryption-key

# ============================================================================
# ADMIN CREDENTIALS (Optional - for admin panel if implemented)
# ============================================================================

ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace-with-strong-admin-password

# ============================================================================
# STRIPE BILLING (Optional - if using pro features)
# ============================================================================

STRIPE_SECRET=
STRIPE_PUBLISHABLE=
STRIPE_PRO_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=
STRIPE_WEBHOOK_SECRET=
DOMAIN=http://localhost:3000

# ============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=GuardianBot <noreply@example.com>

# ============================================================================
# SECURITY API KEYS (Optional but recommended for enhanced protection)
# ============================================================================

# VirusTotal API - For malicious link scanning
VIRUSTOTAL_API_KEY=

# URLVoid API - For domain reputation checking
URLVOID_API_KEY=

# Google Safe Browsing API - For phishing detection
SAFE_BROWSING_API_KEY=

# Audit Log Encryption Key
AUDIT_ENCRYPTION_KEY=

# ============================================================================
# FEATURE TOGGLES
# ============================================================================

# Enable AI Toxicity Detection
ENABLE_AI_TOXICITY=true

# Enable VPN Detection
ENABLE_VPN_DETECTION=true

# Enable Web Dashboard
ENABLE_WEB_DASHBOARD=true

# ============================================================================
# RATE LIMITS (v1.0.0+)
# ============================================================================

# Message Rate Limits
MAX_MESSAGES_PER_MINUTE=10

# Join Rate Limits
MAX_JOINS_PER_MINUTE=5

# API Rate Limits (requests per user per minute)
API_RATE_LIMIT=60
API_RATE_WINDOW_MS=60000

# ============================================================================
# TESTING & DEVELOPMENT
# ============================================================================

# Skip environment validation (set to 'true' for CI/CD environments)
SKIP_ENV_VALIDATION=false

# Test Guild ID (for development/testing)
TEST_GUILD_ID=

# ============================================================================
# LOGGING
# ============================================================================

# Log Level (error, warn, info, verbose, debug)
LOG_LEVEL=info

# Enable File Logging
ENABLE_FILE_LOGGING=true

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Memory Limit (for PM2 - optional)
# MAX_MEMORY_RESTART=500M

# WebSocket Ping Interval (ms)
# WS_PING_INTERVAL=30000

# Database Pool Size
# DB_POOL_SIZE=10

# ============================================================================
# ANALYTICS (v1.0.0+)
# ============================================================================

# Enable Dashboard Usage Analytics
ENABLE_ANALYTICS=true

# Analytics Retention (days)
ANALYTICS_RETENTION_DAYS=90
RAID_THRESHOLD=10

# Default Settings
DEFAULT_ACCOUNT_AGE_HOURS=24
DEFAULT_VERIFICATION_LEVEL=1
LOG_RETENTION_DAYS=30
