{
    "version": 1,
    "first_run": true,
    
    "security": {
        "default_protection_mode": "detect_alert",
        "auto_restore_enabled": false,
        "backup_retention_count": 3,
        "seal_mode_auto_relock_minutes": 5,
        "hash_algorithm": "sha256",
        "require_confirmation_for_restore": true,
        "require_confirmation_for_unprotect": true
    },
    
    "monitoring": {
        "scan_interval_seconds": 300,
        "watcher_debounce_ms": 500,
        "ignored_extensions": [".tmp", ".temp", ".swp", ".log"],
        "ignore_hidden_files": true,
        "ignore_system_files": true
    },
    
    "notifications": {
        "alert_level": "all",
        "silent_mode": false,
        "desktop_notifications": true,
        "notification_sound": true
    },
    
    "appearance": {
        "theme": "system",
        "accent_color": "#3b82f6",
        "animations_enabled": true,
        "ui_density": "comfortable",
        "sidebar_collapsed": false
    },
    
    "advanced": {
        "signed_audit_logs": true,
        "debug_logging": false,
        "developer_mode": false,
        "start_minimized": false,
        "start_with_system": false
    },
    
    "profile": {
        "display_name": "User",
        "avatar_style": "initials",
        "app_lock_enabled": false,
        "idle_timeout_minutes": 0,
        "require_auth_for_sensitive": false,
        "totp_enabled": false,
        "totp_secret_encrypted": null,
        "recovery_codes_hash": null,
        "pin_hash": null,
        "password_hash": null
    },
    
    "window": {
        "width": 1200,
        "height": 800,
        "x": null,
        "y": null,
        "maximized": false
    }
}
