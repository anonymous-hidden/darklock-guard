{
  "productName": "Darklock Guard",
  "version": "2.0.0-beta.3",
  "identifier": "com.darklock.guard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174"
  },
  "app": {
    "windows": [
      {
        "title": "Darklock Guard",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "dialog:allow-open"
          ]
        }
      ]
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Darklock",
    "copyright": "Copyright Â© 2025 Darklock",
    "category": "Utility",
    "shortDescription": "Bot management and server security guard",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
