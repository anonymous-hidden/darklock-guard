{
  "$schema": "https://schema.tauri.app/config/2.json",
  "productName": "Darklock Secure Channel",
  "identifier": "io.darklock.secure-channel",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Darklock Secure Channel",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://ids.darklock.net https://rly.darklock.net https://ids.darklock.local https://rly.darklock.local http://localhost:4100 http://localhost:4101; img-src 'self' data: asset: https://asset.localhost; script-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Darklock",
    "copyright": "Copyright Â© 2025 Darklock",
    "category": "Utility",
    "shortDescription": "End-to-end encrypted messaging",
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  },
  "plugins": {}
}
