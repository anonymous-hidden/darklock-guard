[Unit]
Description=Arduino Bridge - Serial Communication with Arduino Mega
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/discord-bot
Environment="PYTHONUNBUFFERED=1"
ExecStart=/usr/bin/python3 -u /home/ubuntu/discord-bot/hardware/arduino_bridge.py
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
